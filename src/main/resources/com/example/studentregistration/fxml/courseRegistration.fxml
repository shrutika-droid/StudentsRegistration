<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CourseRegistrationController">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" styleClass="page-header">
            <children>
                <Label styleClass="page-title" text="Register for Courses">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
        </HBox>

        <!-- Content -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- Available Courses -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-title" text="Available Courses">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <TableView fx:id="availableCoursesTable" styleClass="course-table" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="availableCourseCodeCol" prefWidth="100.0" text="Course Code" />
                                <TableColumn fx:id="availableCourseNameCol" prefWidth="200.0" text="Course Name" />
                                <TableColumn fx:id="availableCreditsCol" prefWidth="80.0" text="Credits" />
                                <TableColumn fx:id="availableProfessorCol" prefWidth="150.0" text="Professor" />
                            </columns>
                        </TableView>
                        <Button onAction="#onRegisterClick" styleClass="register-button" text="Register">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>

                <!-- Registered Courses -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-title" text="Registered Courses">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <TableView fx:id="registeredCoursesTable" styleClass="course-table" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="registeredCourseCodeCol" prefWidth="100.0" text="Course Code" />
                                <TableColumn fx:id="registeredCourseNameCol" prefWidth="200.0" text="Course Name" />
                                <TableColumn fx:id="registeredCreditsCol" prefWidth="80.0" text="Credits" />
                                <TableColumn fx:id="registeredProfessorCol" prefWidth="150.0" text="Professor" />
                            </columns>
                        </TableView>
                        <Button onAction="#onRemoveClick" styleClass="remove-button" text="Remove">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
            </padding>
        </HBox>

        <!-- Footer -->
        <HBox alignment="CENTER">
            <children>
                <Button onAction="#onBackToDashboardClick" styleClass="back-button" text="Back to Dashboard">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
