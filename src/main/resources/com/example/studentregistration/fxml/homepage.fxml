<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeController">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
    <children>
        <Label text="Welcome to the Student Registration System">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Your journey to academic success starts here." textAlignment="CENTER">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Button onAction="#onGetStartedClick" text="Get Started">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </Button>
    </children>
</VBox>
